<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="81dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:paddingLeft="6dp">

        <TextView
            android:id="@+id/acDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="02"
            android:textAlignment="center"
            android:textColor="#444"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/acMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEP"
            android:textAlignment="center"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/view4"
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:background="@drawable/vertical_line_ac" />

        <View
            android:id="@+id/acCircle"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/ac_circle_ddd" />

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/vertical_line_ac" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/acDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="22dp"
            android:paddingTop="2dp"
            android:text="Saturday"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/acEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="27dp"
            android:text="Last day of grade submission (Spring 2018)"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>