<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginBottom="6dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp">

            <RelativeLayout
                android:id="@+id/timeBarHolder"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <RelativeLayout
                    android:id="@+id/timeBarVector"
                    android:layout_width="22dp"
                    android:layout_height="56dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="4dp"
                    android:layout_toStartOf="@+id/classEndRecycler"
                    android:paddingTop="8dp"
                    android:paddingBottom="2dp">

                    <View
                        android:id="@+id/timelineIcon"
                        android:layout_width="2dp"
                        android:layout_height="36dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_vertical"
                        android:background="#ccc" />

                    <TextView
                        android:id="@+id/ball2"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/whitecircle"
                        android:backgroundTint="#ccc" />

                    <TextView
                        android:id="@+id/ball1"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/whitecircle"
                        android:backgroundTint="#ccc" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/classEndRecycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="false"
                    android:paddingBottom="2dp"
                    android:text="01:00 PM"
                    android:textColor="#555"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/classStartRecycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="false"
                    android:autoText="false"
                    android:text="11:20 AM"
                    android:textColor="#333"
                    android:textSize="16dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/courseNameRecycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="CSE225"
                android:textColor="#333"
                android:textSize="18dp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/isClassDone"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:padding="3dp"
                android:text="NAC505"
                android:tint="#999"
                app:srcCompat="@drawable/ic_clock_round" />

            <TextView
                android:id="@+id/classRoomNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/courseNameRecycler"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@+id/imageView3"
                android:text="SAC208"
                android:textColor="#555"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="12dp"
                android:layout_height="14dp"
                android:layout_below="@+id/courseNameRecycler"
                android:layout_alignStart="@+id/courseNameRecycler"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="1dp"
                android:tint="#666"
                app:srcCompat="@drawable/ic_marker_white" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>