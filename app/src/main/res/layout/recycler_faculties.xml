<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/facultyHolderCard"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="8dp"
    app:cardBackgroundColor="#05879f"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:gravity="center_vertical|center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            app:cardBackgroundColor="#26000000"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top|center_horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/facultyRoundImageCard"
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            android:layout_centerInParent="false"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="false"
                            android:layout_marginTop="23dp"
                            android:cropToPadding="true"
                            android:elevation="0dp"
                            android:innerRadius="0dp"
                            android:shape="ring"
                            android:thicknessRatio="1.5"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="50dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="top|center_horizontal">

                                <ImageView
                                    android:id="@+id/facultyProfileImage"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="true"
                                    android:cropToPadding="true" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/facultyFullName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="40dp"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text=" Dr. Arifur Rahman Tmim Tmim TMim Tmim"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/facultyRank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="20dp"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Associate Professor Associate Professor"
                            android:textAlignment="center"
                            android:textColor="#eee"
                            android:textSize="13sp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/borderRightDivide"
                            android:layout_width="1dp"
                            android:layout_height="140dp"
                            android:layout_centerInParent="false"
                            android:layout_centerHorizontal="false"
                            android:layout_centerVertical="true"
                            android:background="@drawable/border_right" />

                        <TextView
                            android:id="@+id/facultySection"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/roomDoorIcon"
                            android:layout_toEndOf="@+id/facultyInitialIcon"
                            android:paddingLeft="5dp"
                            android:text="SECTION 14"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/facultyCourse"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/courseBookIcon"
                            android:layout_toEndOf="@+id/facultyInitialIcon"
                            android:paddingLeft="5dp"
                            android:text="CSE225"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/facultyInitial"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/facultyInitialIcon"
                            android:layout_toEndOf="@+id/facultyInitialIcon"
                            android:paddingLeft="5dp"
                            android:text="MAR3"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/roomDoorIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/facultyInitialIcon"
                            android:layout_alignParentBottom="false"
                            android:layout_marginTop="118dp"
                            android:src="@drawable/ic_door_white" />

                        <ImageView
                            android:id="@+id/courseBookIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/facultyInitialIcon"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="78dp"
                            android:src="@drawable/ic_book_white" />

                        <ImageView
                            android:id="@+id/facultyInitialIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="38dp"
                            android:src="@drawable/ic_person_white" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="190dp"
        android:paddingTop="1dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/ic_message_white" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView5"
            android:layout_alignParentTop="true"
            android:layout_marginTop="55dp"
            android:src="@drawable/ic_phone_white" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView5"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="95dp"
            android:src="@drawable/ic_marker_white" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView5"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="135dp"
            android:src="@drawable/ic_university_white" />

        <TextView
            android:id="@+id/facultyEmail"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView5"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imageView5"
            android:autoLink="email"
            android:text="mdarifur.rahman@northsouth.edu"
            android:textColor="@color/white"
            android:textColorLink="@android:color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/facultyPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView6"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imageView5"

            android:text="+880-2-55668200"
            android:textColor="@color/white"
            android:textColorLink="@android:color/white"
            android:textSize="15dp" />
        <!--android:autoLink="phone"-->
        <TextView
            android:id="@+id/facultyOffice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView7"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imageView5"
            android:text="NAC908"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/facultyDepartment"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView8"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imageView5"
            android:text="Department Of Accounting Finance"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/facultyExt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView6"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/facultyPhone"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
