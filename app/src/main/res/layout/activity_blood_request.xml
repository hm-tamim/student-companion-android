<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/mainFrame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="0dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".EditProfile"
        tools:showIn="@layout/app_bar_main">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="30dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0"
                        android:tint="#666"
                        app:srcCompat="@drawable/ic_drop_water" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginBottom="5dp"
                            android:text="What blood group is needed?"
                            android:textSize="16dp" />

                        <android.support.v7.widget.GridLayout
                            android:id="@+id/bloodGroups"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="15dp"
                            app:columnCount="4"
                            app:rowCount="2">

                            <TextView
                                android:id="@+id/b0"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:background="@drawable/blood_group"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="AB+"
                                android:textAlignment="center"
                                android:textColor="#777"
                                android:textIsSelectable="false"
                                app:layout_columnWeight="1"
                                app:layout_rowWeight="1" />

                            <TextView
                                android:id="@+id/b1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:background="@drawable/blood_group"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="AB-"
                                android:textAlignment="center"
                                android:textColor="#777"
                                android:textIsSelectable="false"
                                app:layout_columnWeight="1"
                                app:layout_rowWeight="1" />

                            <TextView
                                android:id="@+id/b2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:background="@drawable/blood_group"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="A+"
                                android:textAlignment="center"
                                android:textColor="#777"
                                android:textIsSelectable="false"
                                app:layout_columnWeight="1"
                                app:layout_rowWeight="1" />

                            <TextView
                                android:id="@+id/b3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:background="@drawable/blood_group"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="A-"
                                android:textAlignment="center"
                                android:textColor="#777"
                                android:textIsSelectable="false"
                                app:layout_columnWeight="1"
                                app:layout_rowWeight="1" />

                            <TextView
                                android:id="@+id/b4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:background="@drawable/blood_group"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="B+"
                                android:textAlignment="center"
                                android:textColor="#777"
                                android:textIsSelectable="false"
                                app:layout_columnWeight="1"
                                app:layout_rowWeight="1" />

                            <TextView
                                android:id="@+id/b5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:background="@drawable/blood_group"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="B-"
                                android:textAlignment="center"
                                android:textColor="#777"
                                android:textIsSelectable="false"
                                app:layout_columnWeight="1"
                                app:layout_rowWeight="1" />

                            <TextView
                                android:id="@+id/b6"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:background="@drawable/blood_group"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="O+"
                                android:textAlignment="center"
                                android:textColor="#777"
                                android:textIsSelectable="false"
                                app:layout_columnWeight="1"
                                app:layout_rowWeight="1" />

                            <TextView
                                android:id="@+id/b7"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:background="@drawable/blood_group"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="O-"
                                android:textAlignment="center"
                                android:textColor="#777"
                                android:textIsSelectable="false"
                                app:layout_columnWeight="1"
                                app:layout_rowWeight="1" />

                        </android.support.v7.widget.GridLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView115"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0"
                        android:tint="#666"
                        app:srcCompat="@drawable/ic_blood_bag" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView62"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="How many bags?"
                            android:textSize="16dp" />

                        <Spinner
                            android:id="@+id/bags"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:entries="@array/numbers"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView1253"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0"
                        android:tint="#666"
                        app:srcCompat="@drawable/ic_clock2_round" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView243"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="When needed?"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/datePicker"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:ems="10"
                                android:focusable="false"
                                android:hint="Pick a date"
                                android:inputType="none"
                                android:textSize="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:text="\@" />

                            <EditText
                                android:id="@+id/timePicker"
                                android:layout_width="105dp"
                                android:layout_height="50dp"
                                android:layout_weight="0"
                                android:ems="10"
                                android:focusable="false"
                                android:hint="Pick a time"
                                android:inputType="none"
                                android:textSize="16dp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView15534"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0"
                        android:tint="#666"
                        app:srcCompat="@drawable/ic_phone_white" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView25"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="Phone (required)"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:ems="10"
                            android:hint="Phone number"
                            android:inputType="phone"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textSize="16dp" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView15324"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0"
                        android:tint="#666"
                        app:srcCompat="@drawable/ic_marker_white" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView6423"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="Address"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:ems="10"
                            android:hint="Hospital, # Address"
                            android:inputType="textCapWords"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textSize="16dp" />
                    </LinearLayout>


                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="30dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0"
                        android:tint="#666"
                        app:srcCompat="@drawable/ic_comments_outline" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView6324"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="Extra note (optional)"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/note"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:ems="10"
                            android:hint="Disease, is it emergency..."
                            android:inputType="text"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textSize="16dp" />
                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        app:srcCompat="@drawable/ic_done_white_48dp" />

</android.support.design.widget.CoordinatorLayout>