<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/noticeEventsRecyclerCard"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:elevation="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nsuNoticesDate"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:text="31"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/nsuNoticesMonth"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:text="nov"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#444"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/nsuNoticeType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:visibility="gone" />

        <TextView
            android:id="@+id/nsuNoticeUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:visibility="gone" />

        <TextView
            android:id="@+id/nsuNoticesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/nsuNoticesRandomCircle"
            android:layout_toEndOf="@+id/nsuNoticesRandomCircle"
            android:layout_weight="0"
            android:ellipsize="end"
            android:paddingRight="15dp"
            android:text="Statement of the Vice-Chancellor (Press Release)"
            android:textColor="#444"
            android:textSize="17sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>
