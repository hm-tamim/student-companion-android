<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="bottom|center"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_weight="1"
        android:src="@drawable/ic_student_companion_logo_2" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <EditText
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_text_all_bg"
            android:drawableLeft="@drawable/ic_message_white"
            android:drawablePadding="10dp"
            android:drawableTint="#444"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:textColor="#444"
            android:textColorHint="#444"
            android:textSize="16sp"
            android:theme="@style/EditTextTheme" />

        <EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_all_bg"
            android:drawableLeft="@drawable/ic_password_white"
            android:drawablePadding="10dp"
            android:drawableTint="#444"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:textColor="#444"
            android:textColorHint="#444"
            android:textSize="16sp"
            android:theme="@style/EditTextTheme" />

        <!-- Login Button -->

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dip"
            android:background="@drawable/login_button_shape"
            android:text="@string/btn_login"
            android:textColor="#fff" />

        <!-- Link to Login Screen -->

        <Button
            android:id="@+id/btnLinkForget"
            style="@style/RobotoButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="25dp"
            android:background="@null"
            android:text="Forgot password?"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#333"
            android:textSize="17sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnLinkToRegisterScreen"
            style="@style/RobotoButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="60dp"
            android:background="@null"
            android:text="@string/btn_link_to_register"
            android:textAllCaps="false"
            android:textColor="#333"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>