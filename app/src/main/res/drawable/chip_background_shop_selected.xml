<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"
        android:state_focused="false">
        <shape>
            <solid
                android:color="#aaa"/>

            <corners
                android:radius="4dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="1dp"
                android:bottom="1dp"/>

        </shape>

    </item>
    <item>
        <shape>
            <solid
                android:color="#eee"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="1dp"
                android:bottom="1dp"/>

        </shape>
    </item>

</selector>