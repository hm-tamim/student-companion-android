<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"
        android:state_focused="false">
        <shape>
            <solid
                android:color="#aaa"/>

            <corners
                android:radius="38dp"/>
            <padding
                android:left="20dp"
                android:right="20dp" />

        </shape>

    </item>
    <item>
        <shape>
            <solid
                android:color="#e0e0e0"/>
            <corners
                android:radius="38dp"/>
            <padding
                android:left="20dp"
                android:right="20dp" />

        </shape>
    </item>

</selector>